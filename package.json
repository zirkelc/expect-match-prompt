{
  "name": "expect-match-prompt",
  "version": "0.0.1-0",
  "description": "AI prompt matcher for testing with Vitest and Jest",
  "packageManager": "pnpm@9.0.0",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepublishOnly": "pnpm build && pnpm typecheck",
    "build": "tsup && cp types/vitest.d.ts dist/vitest.d.ts",
    "test": "vitest",
    "lint": "biome check . --write",
    "prepare": "husky",
    "typecheck": "attw --pack ."
  },
  "keywords": [],
  "author": "Chris Cooke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zirkelc/expect-match-prompt"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@biomejs/biome": "^1.9.4",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^22.7.7",
    "@vitest/expect": "^3.0.3",
    "husky": "^9.1.6",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.1.0",
    "@vitest/pretty-format": "^3.0.3",
    "ai": "^4.1.0",
    "zod": "^3.24.1"
  }
}
